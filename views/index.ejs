<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>File Upload</title>
    <style>
        body {
            font-family: 'Tahoma', sans-serif;
            background-color: #f4f4f4;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .upload-container {
            background-color: white;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            text-align: center;
            width: 320px;
        }

        .file-input-wrapper {
            position: relative;
            overflow: hidden;
            display: inline-block;
            width: 100%;
            margin-bottom: 1rem;
            text-align: center;
        }

        .file-input-wrapper input[type="file"] {
            font-size: 100px;
            position: absolute;
            left: 0;
            top: 0;
            opacity: 0;
            cursor: pointer;
        }

        .file-input-label {
            background-color: #6c757d;
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            display: inline-block;
            cursor: pointer;
            width: 100%;
            box-sizing: border-box;
        }

        .file-name {
            margin-top: 0.5rem;
            font-size: 1rem;
            color: #555;
            direction: ltr;
            text-align: center;
            word-break: break-word;
            margin-top: 0.5rem;
        }

        button {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            cursor: pointer;
            font-size: 1rem;
            width: 100%;
            margin-top: 1rem;
        }
    </style>
</head>
<body>

<div class="upload-container">
    <h2>File Upload</h2>
    <form action="/upload" method="post" enctype="multipart/form-data">
        <div class="file-input-wrapper">
            <label class="file-input-label">
                Choose File
                <input id="fileInput" type="file" name="file" accept="*/*" required />
            </label>
            <div id="fileName" class="file-name">See the file name...</div>
        </div>
        <button type="submit">Upload and Display</button>
    </form>
</div>

<script>
    const input = document.getElementById('fileInput');
    const fileNameDiv = document.getElementById('fileName');
    input.addEventListener('change', function () {
        const fileName = input.files[0]?.name || '';
        fileNameDiv.textContent = fileName;
    });
</script>

</body>
</html>
